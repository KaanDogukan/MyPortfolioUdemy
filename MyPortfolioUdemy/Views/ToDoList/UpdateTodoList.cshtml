@model ToDoList
@{
    ViewData["Title"] = "UpdateTodoList";
    Layout = "~/Views/Layout/Index.cshtml";
}

<div class="content">
    <div class="container-fluid">
        <h4 class="page-title">Yapılacaklar</h4>
        <div class="row">
            <div class="col-md-12">
                <div class="card">
                    <div class="card-header">
                        <div class="card-title">Yapılacak İş Güncelleme Sayfası</div>
                    </div>
                    <div class="card-body">
                        <form method="post">
                            <input type="hidden" asp-for="ToDoListId" />
                            <label>Başlık & İçerik</label>
                            <input type="text" asp-for="Title" class="form-control" />
                            <br />
                            <label>Son Tarih</label>
                            <input type="date" asp-for="Date" class="form-control" />
                            <br />
                            <label>Görsel</label>
                            <input type="text" asp-for="ImageUrl" class="form-control" />
                            <br />
                            <button class="btn btn-success">İş Güncelle</button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

